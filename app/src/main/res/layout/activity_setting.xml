<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="@string/szzx" />

    <com.ngyb.settingsummary.SettingItemView
        android:id="@+id/siv_update_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/select_first_bg"
        app:isToggle="true"
        app:title="设置自动更新" />

    <com.ngyb.settingsummary.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_middle_bg"
        app:isToggle="true"
        app:title="归属地显示设置" />

    <com.ngyb.settingsummary.SettingItemView
        android:id="@+id/siv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_last_bg"
        app:isToggle="false"
        app:title="归属地显示风格设置" />
</LinearLayout>